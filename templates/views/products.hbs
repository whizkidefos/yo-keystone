<div class="container">
	<h1>Products</h1>

	<div class="row">

				{{# each products}}

				<div class="col-md-4 col-lg-4">
					<h2><a href="{{productUrl slug}}">{{{ title }}}</a></h2>

					{{#if image }}
						<img src="{{{cloudinaryUrl image crop="fit"}}}" class="thumbnail" width="100%" height="300px" crop="fit" />
					{{/if}}
				</div>

				{{/each}}

	</div>
</div>
